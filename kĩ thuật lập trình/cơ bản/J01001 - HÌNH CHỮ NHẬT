package example;
import java.util.*;

public class test {
    public static Scanner n = new Scanner(System.in);
    public static void main(String[] args) throws Exception {
        long a = n.nextLong();
        long b = n.nextLong();
        if (a <= 0 || b <= 0) {
            System.out.println(0);
        } 
        else {
            System.out.println((a + b) * 2 + " " + a * b);
        }
    }
}
